<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>ATM Project</display-name>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.bank.appli.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Register Servlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.bank.appli.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Dashboard Servlet (if needed) -->
  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.bank.appli.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <!-- Deposit to Own Account Servlet -->
  <servlet>
    <servlet-name>DepositOwnServlet</servlet-name>
    <servlet-class>com.bank.appli.DepositOwnServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepositOwnServlet</servlet-name>
    <url-pattern>/depositOwn</url-pattern>
  </servlet-mapping>

  <!-- Deposit to Another Account Servlet -->
  <servlet>
    <servlet-name>DepositOtherServlet</servlet-name>
    <servlet-class>com.bank.appli.DepositOtherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepositOtherServlet</servlet-name>
    <url-pattern>/depositOther</url-pattern>
  </servlet-mapping>

  <!-- Withdraw Servlet -->
  <servlet>
    <servlet-name>WithdrawServlet</servlet-name>
    <servlet-class>com.bank.appli.WithdrawServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WithdrawServlet</servlet-name>
    <url-pattern>/withdraw</url-pattern>
  </servlet-mapping>

  <!-- Balance Servlet -->
  <servlet>
    <servlet-name>BalanceServlet</servlet-name>
    <servlet-class>com.bank.appli.BalanceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BalanceServlet</servlet-name>
    <url-pattern>/balance</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.bank.appli.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- Welcome File -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
